<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="areaLocation" table="arealocations">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="country" column="country" type="string"/>
        <property name="region" column="region" type="string"/>
        <property name="city" column="city" type="string"/>
        <property name="postalCode" column="postalCode" type="string"/>
        <property name="latitude" column="latitude" type="float"/>
        <property name="longitude" column="longitude" type="float"/>
        <property name="metroCode" column="metroCode" type="int"/>
        <property name="areaCode" column="areaCode" type="int"/>
    </class>
</hibernate-mapping>